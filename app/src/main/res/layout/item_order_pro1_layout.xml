<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_color"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/pro_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="@string/action_settings" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="3dp"
        android:paddingLeft="12dp" 
        android:paddingTop="3dp" >

        <TextView
            android:id="@+id/item_pro_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:lineSpacingMultiplier="1"
            android:text=""
            android:gravity="left|center_vertical"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pro_select_attribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_tv"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:maxLines="3"
            android:text=""
            android:textColor="@color/right_tip_textcolor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pro_mprice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/pro_list_price_color"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/pro_select_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:text=""
            android:textColor="@color/right_tip_textcolor"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>