<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cart_bottom_edit_ll"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:background="@color/activity_titlebar_bgcolor"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="visible" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/cart_delete_all_choose_cb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/checkbox_select_bg"
            android:button="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/all_choose_str"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/cart_delete_btn"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_weight="1"
        android:background="@drawable/cart_bottom_button_bg"
        android:text="@string/delete_str"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>