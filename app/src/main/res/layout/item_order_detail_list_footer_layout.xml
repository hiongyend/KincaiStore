<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    <RelativeLayout
                android:id="@+id/order_detail_payway_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view4"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/payway_str"
                    android:textColor="@color/dialog_textcolr"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/order_detail_payway_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/dialog_textcolr"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/order_detail_payway_rl"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/view_line_color" />

            <RelativeLayout
                android:id="@+id/order_detail_total_money_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view5"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/amount_of_goods_str"
                    android:textColor="@color/dialog_textcolr"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/order_detail_total_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/btn_red_no_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_detail_yunfei_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_detail_total_money_rl"
                android:background="@color/white"
                android:gravity="center_vertical" 
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/the_freight_str"
                    android:textColor="@color/dialog_textcolr"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/order_detail_yunfei_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/btn_red_no_color"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/order_detail_yunfei_rl"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/view_line_color" />

            <RelativeLayout
                android:id="@+id/order_detail_shifukuan_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view6"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/order_detail_shifukuan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/btn_red_no_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/order_detail_shifukuan_tv"
                    android:text="@string/shijifukuan_str"
                    android:textColor="@color/dialog_textcolr"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/order_detail_shifukuan_rl"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/view_line_color" />

            <LinearLayout
                android:id="@+id/order_detail_order_info_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view7"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/order_detail_order_info_order_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/right_tip_textcolor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/order_detail_order_info_transaction_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/right_tip_textcolor"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/order_detail_order_info_create_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text=""
                    android:textColor="@color/right_tip_textcolor"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/order_detail_order_info_pay_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text=""
                    android:textColor="@color/right_tip_textcolor"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/order_detail_order_info_shipments_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text=""
                    android:textColor="@color/right_tip_textcolor"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/order_detail_order_info_successful_trade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text=""
                    android:textColor="@color/right_tip_textcolor"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>
</RelativeLayout>
