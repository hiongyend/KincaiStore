<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/store_top_rl"
        android:layout_width="match_parent"
        android:layout_height="118dp" >

        <ImageView
            android:id="@+id/store_bg_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/androidimageview"
            android:scaleType="fitXY"
            android:src="#50000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#56000000" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true" >

            <ImageView
                android:id="@+id/store_logo_iv"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:contentDescription="@string/androidimageview"
                android:scaleType="fitXY"
                android:src="@color/white" />

            <TextView
                android:id="@+id/store_collect_tv"
                android:layout_width="66dp"
                android:layout_height="46dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/hong2"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:text="收藏"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/store_attent_num_tv"
                android:layout_width="66dp"
                android:layout_height="46dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/store_collect_tv"
                android:background="@color/hong1"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:text="粉丝数"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/store_attent_num_tv"
                android:layout_toRightOf="@id/store_logo_iv"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/store_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="店铺名称"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/store_id_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="店铺号"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/store_xinyong_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/androidimageview" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@id/store_top_rl"
        android:background="@color/fragment_color"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/store_all_pro_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@color/tab_viewline_color" />

            <TextView
                android:id="@+id/store_new_pro_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@color/tab_viewline_color" />

            <TextView
                android:id="@+id/store_jianjie_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@color/tab_viewline_color" />

            <TextView
                android:id="@+id/store_dongtai_pro_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/store_tabline_iv"
            android:layout_width="66dp"
            android:layout_height="2dp"
            android:background="@color/approach_red"
            android:contentDescription="@string/androidimageview" />
    </LinearLayout>

</RelativeLayout>