<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_tip_bg"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_dialog_notify"
        android:drawablePadding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:text="@string/smssdk_make_sure_mobile_num"
        android:textColor="#4c4c4c"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#3f7bd6" />

    <TextView
        android:id="@+id/tv_dialog_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:paddingLeft="20dip"
        android:paddingRight="10dip"
        android:text="@string/smssdk_make_sure_mobile_detail"
        android:textColor="#4c4c4c"
        android:textSize="16sp" />

    <TextView
        android:text=""
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:paddingLeft="20dip"
        android:paddingRight="10dip"
        android:textColor="#4c4c4c"
        android:textSize="15sp" />

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:text="@string/smssdk_cancel"
            android:background="@drawable/dialog_btn_left_bg"
            android:textColor="#4c4c4c"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:text="@string/smssdk_ok"
            android:background="@drawable/dialog_btn_right_bg"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>
    

</LinearLayout>